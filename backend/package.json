{
  "name": "devcloud-backend",
  "version": "1.0.0",
  "description": "Backend API for DevCloud Partners contact form",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "build:start": "npm run build && npm start",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop devcloud-backend",
    "pm2:restart": "pm2 restart devcloud-backend",
    "pm2:logs": "pm2 logs devcloud-backend"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "rate-limiter-flexible": "^5.0.3",
    "nodemailer": "^6.9.8",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/nodemailer": "^6.4.14",
    "@types/node": "^20.10.6",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}